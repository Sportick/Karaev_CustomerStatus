<?xml version="1.0"?>

<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="customer_account_navigation">
            <block class="Magento\Customer\Block\Account\SortLinkInterface"
                   name="customer-account-navigation-trigger-link"
                   after="customer-account-navigation-newsletter-subscriptions-link">
                <arguments>
                    <argument name="label" xsi:type="string" translate="true">Customer Status</argument>
                    <argument name="path" xsi:type="string">karaev/status</argument>
                </arguments>
            </block>
        </referenceBlock>
    </body>
</page>
